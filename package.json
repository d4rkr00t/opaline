{
  "name": "@opaline/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "scripts": {
    "test": "ava",
    "test:coverage": "nyc --reporter=lcov --reporter=text --all --include='**/**/*.ts' ava",
    "build": "tsc -b ./",
    "lint:staged": "lint-staged --no-stash",
    "postinstall": "npm run build"
  },
  "keywords": [],
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "dependencies": {
    "ava": "^3.5.0",
    "lint-staged": "^10.1.3",
    "nyc": "^15.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "pre-commit": [
    "lint:staged"
  ],
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  }
}
